<?xml version="1.0"?>
<xsp:page   xmlns:xsp="http://www.apache.org/1999/XSP/Core"
            xmlns:basic="http://www.tamarou.com/public/basic/v1"
>
  <page title="Time of Day">
    <xsp:logic>
      my $now = localtime(time);
    </xsp:logic>
    <p>
      At the tone the time will be <basic:reverse><xsp:expr>$now</xsp:expr></basic:reverse>. Please make a note of it.
    </p>
  </page>
</xsp:page>